# Environment example for LangSum
# Copy this file to .env at project root or to config/env/.env (do not commit real secrets)

# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=langsum
DB_USER=langsum
DB_PASSWORD=changeme

# App
APP_ENV=development
APP_PORT=8000
APP_SECRET=replace-with-strong-secret

# Redis
REDIS_URL=redis://localhost:6379/0

# SMTP / Email
EMAIL_FROM=no-reply@langsum.local
EMAIL_FROM_NAME=LangSum
FRONTEND_BASE_URL=http://localhost:8002
SMTP_SERVER=localhost
SMTP_PORT=25
SMTP_USE_TLS=false
SMTP_USE_SSL=false
SMTP_USER=
SMTP_PASSWORD=

# OpenWebUI (AI)
OPENWEBUI_BASE_URL=http://localhost:3000
OPENWEBUI_API_KEY=your-openwebui-key
OPENWEBUI_MODEL_SUMMARY=llama3:8b-instruct
OPENWEBUI_MODEL_TRANSLATE=translate-en-de

# Defaults
DEFAULT_MAX_POSTS_PER_DAY=10
DEFAULT_MAX_REPLIES_PER_DAY=50
